{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "no-tabs": "off",
    "no-console": "off",
    "import/extensions": ["error", { "js": "ignorePackages" }]
  }
}
